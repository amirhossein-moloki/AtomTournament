# Django Settings
SECRET_KEY="your-super-secret-key"
DEBUG=True
ALLOWED_HOSTS="your-domain.com,localhost,127.0.0.1"

# Database
POSTGRES_DB=your-db-name
POSTGRES_USER=your-db-user
POSTGRES_PASSWORD=your-db-password

# Default connection string, points to PgBouncer.
# The Django app should use this URL to connect via the connection pooler.
DATABASE_URL="postgres://your-db-user:your-db-password@pgbouncer:5432/your-db-name"

# Direct connection to PostgreSQL, bypassing PgBouncer.
# Useful for running migrations, management commands, or as a quick rollback option.
DATABASE_URL_DIRECT="postgres://your-db-user:your-db-password@db:5432/your-db-name"

# Redis
REDIS_URL="redis://redis:6379/0"

# Storage Backend
STORAGE_BACKEND="local"

# --- Nginx and Certbot ---
# Main domain for SSL certificate (e.g., example.com,www.example.com)
DOMAIN="your-domain.com"
# Email for Let's Encrypt renewal notifications
EMAIL="your-email@example.com"


# Site Configuration
SITE_NAME="Your Site"
FRONTEND_URL="https://your-domain.com"
MEDIA_URL="https://atom-game.ir/media/"

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS="https://your-domain.com,http://localhost:3000,http://127.0.0.1:3000"

# API Throttling (optional)
API_THROTTLE_RATE_ANON="2000/day"
API_THROTTLE_RATE_USER="20000/day"

# Payment Gateway
ZIBAL_MERCHANT_ID="zibal"
ZIBAL_PAYMENT_SUCCESS_URL="https://your-domain.com/payment/success"
ZIBAL_PAYMENT_FAILED_URL="https://your-domain.com/payment/failed"

# SMS.ir Service
SMSIR_API_KEY="your-smsir-api-key"
SMSIR_LINE_NUMBER="your-smsir-line-number"
SMSIR_OTP_TEMPLATE_ID="your-otp-template-id"
SMSIR_TOURNAMENT_TEMPLATE_ID="your-tournament-template-id"

# Email SMTP Server Settings
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER="your-email@example.com"
EMAIL_HOST_PASSWORD="your-email-password"
DEFAULT_FROM_EMAIL="Your Name <your-email@example.com>"

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_STORAGE_BUCKET_NAME="your-s3-bucket-name"
AWS_S3_REGION_NAME="your-s3-region"

# Google Login
# Google OAuth client ID from Google Cloud Console used to validate ID tokens
# issued to your frontend app during Google sign-in.
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_REDIRECT_URI="https://your-domain.com/auth/google/callback"

# External Services
EXTERNAL_HTTP_TIMEOUT_SECONDS=10
EXTERNAL_HTTP_FAILURE_THRESHOLD=5
EXTERNAL_HTTP_RESET_TIMEOUT=60

# File Uploads
MAX_UPLOAD_SIZE_BYTES=1048576
ALLOWED_UPLOAD_EXTENSIONS=".jpg,.jpeg,.png,.mp4,.mov,.webp,.gif,.heic,.avif"
ALLOWED_UPLOAD_CONTENT_TYPES="image/jpeg,image/png,video/mp4,video/quicktime,image/webp,image/gif,image/heic,image/avif"
